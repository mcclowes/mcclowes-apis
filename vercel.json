{
  "builds": [
    { "src": "index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/.*", "dest": "/index.js" }
  ],
  "crons": [
    {
      "path": "/todos/process/reprioritize",
      "schedule": "0 3 * * *"
    }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 60 // These functions can run for a maximum of 60 seconds
    }
  }
}
